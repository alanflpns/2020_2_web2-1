@model FinanceManagement.Models.Lancamento

@{
    ViewData["Title"] = "Delete";
}
<h3>Tem certeza que deseja excluir esse lançamento?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DespesaReceita)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DespesaReceita)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" style="margin-right:10px;" />
        <a class="btn btn-light" asp-action="index">Voltar</a>
    </form>
</div>
