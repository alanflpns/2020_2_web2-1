@model IEnumerable<FinanceManagement.Models.ViewModels.LancamentoViewModel>

@{
    ViewData["Title"] = "Lançamentos";
}

<div>
    <p class="text-right">
        <a class="btn btn-success" asp-action="Create">
            <span class="icon bi bi-plus"></span> Novo lançamento
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-dark table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Descrição
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Data
                    </th>
                    <th>
                        Despesa ou Receita
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @if (item.Data != null)
                            {
                                string data = item.Data.Date.ToString("dd/MM/yyyy");
                                @Html.DisplayFor(modelItem => data)
                            }

                        </td>
                        <td>
                            @if (item.DespesaReceita)
                            {
                                <p>Receita</p>
                            }
                            else
                            {
                                <p>Despesa</p>
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria)
                        </td>
                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Detalhes"><span class="icon bi bi-info-circle"></span></a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Excluir"><span class="icon bi bi-trash"></span></a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><span class="icon bi bi-pencil"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
